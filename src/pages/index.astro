---
import { AppLoader } from '../components/AppLoader';
import { TopBar } from '../components/TopBar';
import { GlobeScene } from '../components/GlobeScene';
import { ControlPanel } from '../components/ControlPanel';
import { KeyboardControls } from '../components/KeyboardControls';
import AboutPopup from '../components/AboutPopup.astro';
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name="mobile-web-app-capable" content="yes" />
    <title>Sea Surface Temperature</title>

    <!-- Open Graph tags -->
    <meta name="description" content="Explore daily global sea surface temperatures and anomalies on an interactive 3D globe powered by NASA OISST data.">
    <meta property="og:type" content="website">
    <meta property="og:locale" content="en_US">
    <meta property="og:url" content="https://globe-viz.oberbrunner.com/">
    <meta property="og:title" content="Daily Global Sea Surface Temperature Visualization">
    <meta property="og:description" content="Interact with a 3D globe to compare daily sea surface temperatures, anomalies, and trends using NASAâ€™s OISST dataset.">
    <meta property="og:image" content="https://globe-viz.oberbrunner.com/og-image-20251011.jpg">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <meta property="og:image:alt" content="Stylized view of global sea surface temperature data with controls for anomalies and trends.">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="Daily Global Sea Surface Temperature Visualization">
    <meta name="twitter:description" content="Animate daily SST data, compare anomalies, and explore trends on an interactive globe.">
    <meta name="twitter:image" content="https://globe-viz.oberbrunner.com/og-image-20251011.jpg">
    <meta name="twitter:image:alt" content="Stylized view of global sea surface temperature data with controls for anomalies and trends.">
  </head>
  <body>
    <div class="loading">Loading&#8230;</div>
    <AppLoader client:only="solid-js">
      <div id="content" class="wrapper">
        <TopBar client:only="solid-js" />
        <div id="scene-container">
          <GlobeScene client:only="solid-js" />
          <ControlPanel client:only="solid-js" />
        </div>
      </div>
      <KeyboardControls client:only="solid-js" />
    </AppLoader>
    <AboutPopup />
  </body>
</html>
